{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/assets/Icons/**",
          "/assets/images/**",
          "/*.webmanifest",
          "/*.png",
          "/*.svg",
          "/*.jpg",
          "/*.jpeg",
          "/*.gif",
          "/*.pdf"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-calls",
      "urls": [
        "https://your-api-url/*"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "15s",
        "strategy": "freshness"
      }
    }
  ]
}
